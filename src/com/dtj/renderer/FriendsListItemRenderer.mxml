<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	<s:HGroup width="100%" height="100%" verticalAlign="middle" paddingTop="2" paddingLeft="2" paddingBottom="2">
		<s:Image source="{data.picture.data.url}" width="50" height="50"/>
		<s:VGroup verticalAlign="middle" width="100%" height="100%">
			<s:Label text="{data.name}" fontSize="15" fontWeight="bold"/>
			<s:Label text="{data.location.name}"/>
		</s:VGroup>
	</s:HGroup>
</s:ItemRenderer>
